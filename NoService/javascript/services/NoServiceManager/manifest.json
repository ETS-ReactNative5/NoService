    "reach_memory_limit_relaunch": true,
    "git_sources": {
      "github": "https://github.com/"
    },
    "upgrade_sources": {
      "NoShell": ["github", "NOOXY-Research/NoShell"],
      "NoShellc": ["github", "NOOXY-Research/NoShellClient"],
      "NoUser": ["github", "NOOXY-Research/NoUser"],
      "NoActivity": ["github", "NOOXY-Research/NoActivity"],
      "NoServiceManager": ["github", "NOOXY-Research/NoServiceManager"]
    }
  }
